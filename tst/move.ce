call output Set Title _("pico-Ce: Moving Around")

var x: Int = 0
var y: Int = 0

loop {
    call output Set Color Color_Draw (255,255,255,255)
    call output Draw Pixel (x,y)

    var e: Event_ = KeyDown 0
    call input Event (KEYDOWN,&e)

    call output Set Color Color_Draw (0,0,0,255)
    call output Draw Pixel (x,y)
    
    var key: Int = e.KeyDown!;
    if bool _(key == SDLK_LEFT) {
        set x = _(x-1)
    }
    if bool _(key == SDLK_RIGHT) {
        set x = _(x+1)
    }
    if bool _(key == SDLK_UP) {
        set y = _(y+1)
    }
    if bool _(key == SDLK_DOWN) {
        set y = _(y-1)
    }
}
