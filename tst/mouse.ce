call output Set Title _("pico-Ce: Mouse")

loop {
    var e: Event_ = Any
    call input Event (MOUSEBUTTONDOWN,&e)
    var button: Int = e.MouseButtonDown!.1
    if bool _(button == SDL_BUTTON_LEFT) {
        call output Set Color Color_Draw (255,255,255,255)
    } else {
        call output Set Color Color_Draw (0,0,0,255)
    }
    call output Draw Pixel e.MouseButtonDown!.2
}
